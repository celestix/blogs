<script is:inline>
    function handle_night(mode) {
        switch (mode) {
            case 'dark':
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
                break;
            case 'light':
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
                break;
        }
    }
</script>

<nav class="bg-white/90 dark:bg-black/80 dark:backdrop-blur-sm fixed w-full backdrop-blur-xl z-50">
